/* 菜单栏 */
QMenuBar {
    background-color: transparent;
    padding: 0px 10px;
    font-size: 13px;
}

QMenuBar::item {
    padding: 5px 10px;
}

QMenuBar::item:selected {
    border: none;
    border-radius: 4px;
    background-color: rgb(44, 49, 57);
}

/* 下拉菜单 */
QMenuBar QMenu {
    background-color: rgb(33, 37, 43);
}

QMenuBar QMenu::item:selected {
    background-color: rgb(64, 71, 88);
}