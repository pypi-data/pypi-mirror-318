MDScreen:
    name:"main"
    MDFloatLayout:
        id: mdfltlaytrrtthrt
        md_bg_colour: 1, 1, 1, 1
        Image:
            source: app.imageformain()

            size_hint: 1,1
            pos_hint : {"center_x": .5, "center_y": .5}


        Image:
            source: app.imageformainlogo()
            source_hint: .8, .8
            pos_hint: {"center_x": .50, "center_y": .865}

        Image:
            source: app.imageformainmain()
            pos_hint: {"center_x": .50, "center_y": .65}


        MDLabel:
            text: "L E T ' S  S T A R T"
            font_name: app.bahnscriptreplace()
            pos_hint: {"center_y": .42}
            font_size: "30sp"
            halign: "center"
            color: rgba(34, 34, 34, 255)

        MDLabel:
            text: "Revolutionizing Education through Personalization"
            font_name: app.bahnscriptlightreplace()
            pos_hint: {"center_y": .35}
            font_size: "15sp"
            halign: "center"
            color: rgba(127, 127, 127, 255)

        Button:
            text: "LOGIN"
            size_hint: .66, .065
            background_color: 0, 0, 0, 0
            pos_hint: {"center_x": .5, "center_y": .25}
            font_name: app.bahnscriptreplace()
            on_release:
                app.destroytheerror()
                root.manager.transition.direction = "left"
                root.manager.current = "login"
            canvas.before:
                Color:
                    rgb: rgba(238, 124, 15, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        Button:
            text: "SIGN UP"
            size_hint: .66, .065
            background_color: 0, 0, 0, 0
            pos_hint: {"center_x": .5, "center_y": .16}
            color: rgba(238, 124, 15, 255)
            font_name: app.bahnscriptreplace()
            on_release:
                app.destroytheerror()
                root.manager.transition.direction = "left"
                root.manager.current = "signup"
            canvas.before:
                Color:
                    rgb: rgba(238, 124, 15, 255)
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5, 5, 5, 5, 100
        Label:
            id:errorLabel
            text:"Error creating user. Please enter a \n valid email address."
            color: rgba(127, 127, 127, 255)
            pos_hint: {"center_y": .05}
            halign:'center'
            padding: 0,20
            opacity: 0
            font: app.bahnscriptlightreplace()
