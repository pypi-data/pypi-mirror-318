MDScreen:
    name: "varscript"

    MDFloatLayout:
        id: float_slayout
        Image:
            source: app.imageforhmoapicysplelogineijgo()

            pos_hint : {"center_x": .5, "center_y": .5}

        Image:
            source: app.imageforhmoadetaiabstlsrsignulelogineijgo()

            size_hint: 1,1
            pos_hint : {"center_x": .5, "center_y": .5}

        MyVideoPlayer:
            id: video_player
            source: app.imageforhmblackoadetaiabstlsrsignulelogineijgo()
            state: 'play'
            options: {'eos': 'loop'}
            size: .2,.2
            #allow_stretch: True
            pos_hint: {"center_y": .7}

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "home"
                app.changechangemastervar()

        MDLabel:
            id: vidScreenHeadTxt
            text: ""
            font_name: app.bahnscriptlightreplace()
            font_size: "15sp"
            pos_hint: {"center_x": .615, "center_y": .9477}
            color: rgba(52, 0, 231, 255)

        MDLabel:
            id: paraTxt
            text: ""
            font_name: app.notoreplaceforpath()
            font_size: "8sp"
            pos_hint: {"center_x": .5, "center_y": .42}
            color: rgba(68, 78, 132, 255)
            halign: "center"

        MDTextButton:
            id: clicktostarttext
            text: "CLICK"
            color: rgba(238, 124, 15, 255)
            pos_hint: {"center_x": .5, "center_y": .72}
            on_press: app.change_video_source()
            size_hint: .4, .065
            opacity: 1

        Button:
            id: quizbtnn
            text: "CONTINUE TO QUIZ"
            size_hint: .66, .065
            background_color: 0, 0, 0, 0
            pos_hint: {"center_x": .5, "center_y": .13}
            font_name: "bahnschrift"
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "questionsscreen"
                app.changevolumeofvideo()
            canvas.before:
                Color:
                    rgb: rgba(238, 124, 15, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
