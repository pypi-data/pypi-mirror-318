                root.manager.transition.direction = "left"
                root.manager.current = "clairtybot"
            canvas.before:
                Color:
                    rgb: rgba(69,114,201, 255)
                Line:
                    width: 2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5, 5, 5, 5, 100

