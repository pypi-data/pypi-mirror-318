            background_color: rgba(69,114,201, 255)
            pos_hint: {"center_x": .33, "center_y": .795}
            color: rgba(255,255,255,255)
            font_name: app.notoreplaceforpath()
            font_size: "18sp"
            font_color: rgba(255,255,255,255)
