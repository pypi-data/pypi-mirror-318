MDScreen:
    name: "questions"
    MDFloatLayout:
        MDLabel:
            id: "questiontxt"
            text: "Which planet is also known as the Red Planet?"
            pos_hint: {"center_y": .75}
            color: rgba(52, 0, 231, 255)
            font_size: "17sp"
            font_name: app.bahnscriptreplace()
            halign: "center"

        MDLabel:
            text: app.question_number_text()
            pos_hint: {"center_y": .85}
            color: rgba(169,169,169, 255)
            font_size: "19sp"
            font_name: app.bahnscriptreplace()
            halign: "center"

        Button:
            id: questionbtn1
            text: app.button_one_text()
            size_hint: .8, .08
            background_color: 0, 0, 0, 0
            pos_hint: {"center_x": .5, "center_y": .63}
            font_name: app.bahnscriptreplace()
            font_size: "15sp"
            on_release:
                app.btnclickornot_one()
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        Button:
            id: questionbtn2
            text: app.button_two_text()
            size_hint: .8, .08
            background_color: 0, 0, 0, 0
            pos_hint: {"center_x": .5, "center_y": .54}
            font_name: app.bahnscriptreplace()
            font_size: "15sp"
            on_release:
                app.btnclickornot_two()
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        Button:
            id: questionbtn3
            text: app.button_three_text()
            size_hint: .8, .08
            background_color: 0, 0, 0, 0
            pos_hint: {"center_x": .5, "center_y": .45}
            font_name: app.bahnscriptreplace()
            font_size: "15sp"
            on_release:
                app.btnclickornot_three()
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        Button:
            id: questionbtn4
            text: app.button_four_text()
            size_hint: .8, .08
            background_color: 0, 0, 0, 0
            pos_hint: {"center_x": .5, "center_y": .36}
            font_name: app.bahnscriptreplace()
            font_size: "15sp"
            on_release:
                app.btnclickornot_four()
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]

        Button:
            text: app.submitbtn_text()
            size_hint: .66, .065
            background_color: 0, 0, 0, 0
            pos_hint: {"center_x": .505, "center_y": .2}
            color: rgba(52, 0, 231, 255)
            font_name: app.bahnscriptreplace()
            on_release:
                app.submitbtn_whattodo()
                app.question_text()
                if app.question_number == 11: root.manager.transition.direction = "right"; root.manager.current = "home"
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5, 5, 5, 5, 100



