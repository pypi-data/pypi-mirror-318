<odoo>
    <record
        id="crm_lead_view_form_inherited_attach_related_saleorder_report"
        model="ir.ui.view"
    >
        <field
            name="name"
        >crm.lead.oppor.inherited.attach.related.saleorder.report</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="sale_crm.crm_case_form_view_oppor" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='stage_id']" position="before">
                <button
                    name="action_send_documents_sale"
                    string="Send Quotations"
                    type="object"
                    invisible="not quotation_count"
                />
            </xpath>
        </field>
    </record>
</odoo>
