from fryweb import Element

def RefApp():
    <template>
      <div>
        <p ref=(foo)>
          Hello World!
        </p>
      </div>
    </template>
    <script bar>
      setTimeout(()=>{
        foo.style.transform = "skewY(180deg)";
      }, 1000);
      setTimeout(()=>{
        bar.style.transform = "skewY(180deg)";
      }, 2000);
    </script>

if __name__ == '__main__':
    from fryweb import render
    print(render(RefApp))
